doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="description", content=description)
    meta(name="keywords", content=keywords)

    meta(property="og:locale", content="ja_JP")
    meta(property="og:type", content="website")
    meta(property="og:title", content=title)
    meta(property="og:description", content=description)
    meta(property="og:url", content=url)
    meta(property="og:site_name", content=title)
    meta(property="og:image", content=ogImage)

    meta(name="twitter:card", content="summary")
    meta(name="twitter:title", content=title)
    meta(name="twitter:description", content=description)
    meta(name="twitter:url", content=url)
    meta(name="twitter:image:src", content=ogImage)

    meta(name="format-detection", content="telephone=no")
    meta(name="viewport", content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no")
    title= title
    link(rel="shortcut icon", href="./images/favicon.ico")
    link(rel="stylesheet", href="./css/style.css")

  body
    div.container

      div.header.container__row
        div.header__inner
          div.brand
            h1.brand__logo: a(href="./") Directree
            h2.brand__text Indent text to Tree text.
          ul.shares
            li.shares__item--twitter
              a.shares__link(href="#"): i.fa.fa-twitter
              div.shares__popup Tweet!

            li.shares__item--facebook
              a.shares__link(href="#"): i.fa.fa-facebook
              div.shares__popup Share!

            li.shares__item--hatena
              a.shares__link(href="#"): i.icon-hatena
              div.shares__popup Bookmark!

            li.shares__item--pocket
              a.shares__link(href="#"): i.fa.fa-get-pocket
              div.shares__popup Save!

            li.shares__item--github
              a.shares__link(href="https://github.com/tsuyoshiwada/directree"): i.fa.fa-github
              div.shares__popup Source on GitHub 
      
      div.editor-titles.container__row
        h3.editor-title--input.container__col Input
        h3.editor-title--output.container__col Output

      div.editors.container__row
        div#input-editor.editor--input.container__col
        div#output-editor.editor--output.container__col
    
      p.copyright Copyright Directree &copy; All Right Reserved.


    script(type="text/javascript", src="./js/app.bundle.js")
